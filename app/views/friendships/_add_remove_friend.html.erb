<% if user != current_user %>
	<% case friendship_status(user) 
		when false %>
		<%= link_to 'Add Friend', user_friendships_path(user_id: user.id), method: :post, class: "btn btn-primary" %>
	<% when 'friends' %>
		<%= link_to 'Remove Friend', user_friendship_path(user_id: user.id, id: current_user.id), method: :delete, class: "btn btn-primary" %>
	<% when 'request sent' %>
		<%= link_to 'Cancel friend request', user_friendship_path(user_id: user.id, id: current_user.id), method: :delete, class: "btn btn-primary" %>
	<% when 'accept friend request' %>
		<%= link_to 'Accept friend request', user_friendship_path(user_id: user.id, id: current_user.id), method: :patch, class: "btn btn-primary" %>
		<%= link_to 'Decline friend request', user_friendship_path(user_id: user.id, id: current_user.id), method: :delete, class: "btn btn-primary" %>
	<% end %>
<% end %>